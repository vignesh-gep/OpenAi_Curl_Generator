{
  "manifest_version": 3,
  "name": "QiStuidioCurl Prefill Helper",
  "version": "1.0.1",
  "description": "Capture tools and conversation JSON from Qi Studio / Langfuse pages and prefill Curl Generator.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "QiStuidioCurl"
  },
  "content_scripts": [
    {
      "matches": [
        "https://llm-curl-generator.vercel.app/*",
        "http://localhost:*/*curl-generator*",
        "http://127.0.0.1:*/*curl-generator*"
      ],
      "js": ["generator-content.js"],
      "run_at": "document_idle"
    }
  ]
}

